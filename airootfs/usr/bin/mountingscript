#!/usr/bin/env bash

source ./partitionscript

BOOT_PART="${DISK}/dev/sda1" 

if [ "$swapyn" == "y" ]; then
    SWAP_PART="${DISK}/dev/sda3" || { echo "Failed to format swap partition"; exit 1; } 
fi

ROOT_PART="${DISK}/dev/sda2"

# Mount Root
echo "Mounting root..."
mount "$ROOT_PART" /mnt
echo "Success."

# Mount Boot (Create the directory first)
echo "Mounting boot..."
mkdir -p /mnt/boot
mount "$BOOT_PART" /mnt/boot
echo "Success."

# Enable Swap
if [ "$swapyn" == "y" ]; then
    echo "Enabling swap..."
    swapon "$SWAP_PART"
    echo "Success."
fi


echo "Disk $DISK has been partitioned, formatted, and mounted to /mnt."